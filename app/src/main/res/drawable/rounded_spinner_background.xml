<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp 1: Hình dạng nền chính (Màu trắng, bo tròn) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Màu nền: Trắng -->
            <solid android:color="@android:color/white"/>

            <!-- Góc bo tròn -->
            <corners android:radius="8dp"/>

            <!-- Đường viền (Stroke) màu xám nhạt -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/>
        </shape>
    </item>

    <!-- Lớp 2: Thêm một chút padding để nội dung (text và mũi tên) không chạm vào viền -->
    <item android:left="8dp" android:right="8dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</layer-list>