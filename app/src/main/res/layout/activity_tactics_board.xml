<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".TacticsBoardActivity">

    <ImageView
        android:id="@+id/iv_football_pitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_football_pitch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save_formation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_description_pitch" />
    <Button
        android:id="@+id/btn_select_formation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4-3-3"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:drawableTint="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/dark_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_formation_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đội hình 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/btn_select_formation"
        app:layout_constraintBottom_toBottomOf="@id/btn_select_formation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_select_formation"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_formation_positions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_select_formation"
        app:layout_constraintBottom_toTopOf="@id/btn_save_formation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_gk"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>
        <include layout="@layout/card_player_position"
            android:id="@+id/pos_lb"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="LB"
            app:layout_constraintBottom_toTopOf="@id/pos_gk"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            tools:layout_editor_absoluteY="350dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_cb1"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="LCB"
            app:layout_constraintBottom_toTopOf="@id/pos_gk"
            app:layout_constraintEnd_toStartOf="@+id/pos_gk"
            android:layout_marginEnd="32dp"
            tools:layout_editor_absoluteY="350dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_cb2"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="RCB"
            app:layout_constraintBottom_toTopOf="@id/pos_gk"
            app:layout_constraintStart_toEndOf="@+id/pos_gk"
            android:layout_marginStart="32dp"
            tools:layout_editor_absoluteY="350dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_rb"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="RB"
            app:layout_constraintBottom_toTopOf="@id/pos_gk"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:layout_editor_absoluteY="350dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_cm1"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="LCM"
            app:layout_constraintVerticalBias="0.6"
            app:layout_constraintBottom_toTopOf="@id/pos_lb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            tools:layout_editor_absoluteY="250dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_cdm"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="CDM"
            app:layout_constraintVerticalBias="0.6"
            app:layout_constraintBottom_toTopOf="@id/pos_cb1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="250dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_cm2"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="RCM"
            app:layout_constraintVerticalBias="0.6"
            app:layout_constraintBottom_toTopOf="@id/pos_rb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            tools:layout_editor_absoluteY="250dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_lw"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="LW"
            app:layout_constraintVerticalBias="0.3"
            app:layout_constraintBottom_toTopOf="@id/pos_cm1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            tools:layout_editor_absoluteY="150dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_st"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="ST"
            app:layout_constraintVerticalBias="0.3"
            app:layout_constraintBottom_toTopOf="@id/pos_cdm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="150dp" />

        <include layout="@layout/card_player_position"
            android:id="@+id/pos_rw"
            android:layout_width="@dimen/player_card_width"
            android:layout_height="wrap_content"
            style="@style/FormationCardStyle"
            tools:tv_position_label="RW"
            app:layout_constraintVerticalBias="0.3"
            app:layout_constraintBottom_toTopOf="@id/pos_cm2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:layout_editor_absoluteY="150dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_save_formation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu Đội hình"
        android:textAllCaps="false"
        android:paddingVertical="14dp"
        android:textSize="16sp"
        android:backgroundTint="@color/pitch_green"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save_formation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>