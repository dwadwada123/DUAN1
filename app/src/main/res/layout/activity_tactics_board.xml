<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral95">
    <!-- Dùng màu nền xám nhạt tương đương bg-gray-100 -->

    <!-- Header Control -->
    <LinearLayout
        android:id="@+id/header_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tactical Board"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Nút chọn sơ đồ (Formation Selector) -->
        <Spinner
            android:id="@+id/formation_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_spinner_background"
            android:padding="8dp"
            android:entries="@array/formation_options"
            tools:text="4-3-3"
            android:spinnerMode="dropdown"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Nút Lưu Đội hình (Save Formation Button) -->
        <com
            android:id="@+id/btn_save_formation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Formation"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableStart="@drawable/ic_save"
            android:drawablePadding="4dp"
            app:icon="@drawable/ic_save"
            app:iconTint="@android:color/white"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="#1D4ED8"/>
        <!-- Màu xanh dương đậm (tương đương Tailwind blue-700) -->
    </LinearLayout>

    <!-- Football Pitch Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pitch_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintTop_toBottomOf="@id/header_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:background="@drawable/background_football_pitch"
        android:minHeight="400dp"
        android:maxHeight="800dp">

        <!-- Lớp phủ (Overlay) cho 11 thẻ vị trí -->
        <FrameLayout
            android:id="@+id/player_slots_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Vòng xoay tải (Loading Spinner) -->
        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@android:color/white"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Formation Label Overlay (Tương đương div overlay hiển thị "Formation: 4-3-3") -->
        <TextView
            android:id="@+id/tv_formation_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_black_overlay"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Formation: 4-3-3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>