<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground">
    <View
        android:id="@+id/player_image_placeholder"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_circle_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/player_image_placeholder"
        app:layout_constraintEnd_toStartOf="@id/action_button_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:background="@color/light_gray_placeholder"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:background="@color/light_gray_placeholder" />

    </LinearLayout>

    <View
        android:id="@+id/action_button_placeholder"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_rounded_rect_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>