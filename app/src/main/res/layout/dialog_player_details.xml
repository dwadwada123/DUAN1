<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#242424">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Đóng"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/iv_player_image_dialog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_circle_gray"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_football_with_trophy"
            android:contentDescription="Ảnh cầu thủ" />

        <TextView
            android:id="@+id/tv_player_name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            tools:text="Kylian Mbappé" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/iv_team_logo_dialog"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_background_for_logo"
                android:contentDescription="Logo đội"
                android:padding="4dp"
                tools:src="@drawable/ic_team_logo_example" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="12dp"
                android:background="#505050" />

            <ImageView
                android:id="@+id/iv_nationality_flag_dialog"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:contentDescription="Cờ"
                tools:src="@drawable/ic_flag_example" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginBottom="32dp">

            <TextView
                style="@style/DetailLabel"
                android:text="Đội bóng:" />

            <TextView
                android:id="@+id/tv_detail_team"
                style="@style/DetailValue"
                android:textColor="@color/pitch_green"
                tools:text="Paris Saint-Germain" />

            <TextView
                style="@style/DetailLabel"
                android:text="Vị trí:" />

            <TextView
                android:id="@+id/tv_detail_position"
                style="@style/DetailValue"
                tools:text="Forward (ST)" />

            <TextView
                style="@style/DetailLabel"
                android:text="Quốc tịch:" />

            <TextView
                android:id="@+id/tv_detail_nationality"
                style="@style/DetailValue"
                tools:text="Pháp" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dismiss_player"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sa thải cầu thủ"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/red_button"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart" />

    </LinearLayout>
</androidx.cardview.widget.CardView>