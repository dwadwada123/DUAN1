<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@color/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/dark_background">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="end"
            android:contentDescription="Đóng"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/iv_player_image_dialog"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_circle_gray"
            tools:src="@tools:sample/avatars"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Ảnh cầu thủ" />

        <TextView
            android:id="@+id/tv_player_name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            tools:text="Kylian Mbappé"
            android:layout_marginBottom="24dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="24dp">

            <TextView
                style="@style/DetailLabel"
                android:text="Đội bóng:" />
            <TextView
                android:id="@+id/tv_detail_team"
                style="@style/DetailValue"
                tools:text="Paris Saint-Germain" />

            <TextView
                style="@style/DetailLabel"
                android:text="Vị trí:" />
            <TextView
                android:id="@+id/tv_detail_position"
                style="@style/DetailValue"
                tools:text="Forward (ST)" />

            <TextView
                style="@style/DetailLabel"
                android:text="Quốc tịch:" />
            <TextView
                android:id="@+id/tv_detail_nationality"
                style="@style/DetailValue"
                tools:text="Pháp" />

        </GridLayout>

        <Button
            android:id="@+id/btn_dismiss_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sa thải cầu thủ"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/red_button"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>