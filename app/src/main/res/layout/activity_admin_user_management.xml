<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".AdminUserManagementActivity">

    <ScrollView
        android:id="@+id/admin_user_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/admin_bottom_navigation_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/admin_header_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quản lý Người dùng"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_admin_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng xuất"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FF4444"
                    android:paddingHorizontal="16dp"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_filter_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/admin_header_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/et_search_user"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext_dark"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:hint="Tìm kiếm theo tên/email..."
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="8dp"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"/>

                <ImageButton
                    android:id="@+id/btn_filter_users"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_button_dark"
                    android:src="@drawable/ic_filter_white"
                    android:contentDescription="Lọc người dùng">

                </ImageButton>

            </LinearLayout>

            <TextView
                android:id="@+id/user_list_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Danh sách Tài khoản"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/search_filter_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_user_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/user_list_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_admin_user_card"
                tools:itemCount="5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/admin_bottom_navigation_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1C1C1C"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            style="@style/BottomNavButtonAdmin"
            android:text="Thống kê"
            android:textColor="#999999"
            android:drawableTop="@drawable/ic_stats_inactive"
            android:id="@+id/btn_nav_stats"/>

        <Button
            style="@style/BottomNavButtonAdmin"
            android:text="Quản lý Người dùng"
            android:textColor="#3DDC84"
            android:drawableTop="@drawable/ic_users_active"
            android:id="@+id/btn_nav_users"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>